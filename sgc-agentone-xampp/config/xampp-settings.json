{
  "environment": "xampp",
  "port": 80,
  "base_url": "http://localhost/sgc-agentone",
  "project_root": ".",
  "security": {
    "api_key": "sgc-agent-xampp-key-2024",
    "allowed_origins": [
      "http://localhost",
      "http://127.0.0.1",
      "http://localhost/sgc-agentone"
    ],
    "require_auth": false
  },
  "apache": {
    "mod_rewrite": true,
    "compression": true,
    "caching": true,
    "document_root": "C:/xampp/htdocs/sgc-agentone"
  },
  "database": {
    "type": "sqlite",
    "path": "core/db/app.db",
    "auto_create": true
  },
  "logs": {
    "access_log": "core/logs/xampp-access.log",
    "error_log": "core/logs/xampp-error.log",
    "app_log": "core/logs/app.log",
    "rotation": true,
    "max_size": "10MB"
  },
  "features": {
    "blind_exec_enabled": false,
    "file_uploads": true,
    "max_file_size": "10MB",
    "allowed_extensions": ["txt", "json", "php", "js", "css", "html"]
  }
}